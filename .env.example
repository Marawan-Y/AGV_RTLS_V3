# 36. .env.example
# AGV RTLS Dashboard Environment Configuration

# MySQL Database
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=agv_rtls
MYSQL_USER=agv
MYSQL_PASSWORD=your_secure_password_here
MYSQL_ROOT_PASSWORD=your_root_password_here

# MQTT Broker
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_TOPIC=rtls/+/position
MQTT_QOS=1
MQTT_USERNAME=
MQTT_PASSWORD=

# Coordinate System
UTM_EPSG=32633  # Adjust to your location (32633 is UTM zone 33N for Germany)
TRANSFORM_MODE=auto  # auto | identity
PLANT_CRS=LOCAL

# Plant Bounds (meters)
PLANT_XMIN=0
PLANT_XMAX=200
PLANT_YMIN=0
PLANT_YMAX=150

# Application Settings
APP_ENV=production  # development | staging | production
APP_DEBUG=false
APP_SECRET_KEY=your_secret_key_here

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit Settings
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agv_rtls.log

# Performance
CACHE_TTL=300
BATCH_SIZE=1000
BUFFER_SIZE=10000

# Data Retention
RETENTION_DAYS=90
ARCHIVE_ENABLED=true
ARCHIVE_PATH=/backup/agv_archive